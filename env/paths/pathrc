#!/usr/bin/env bash
# pathrc
# --
# (c) Iver!
# Iv√°n Jaimes <iver@iver.mx>
# --
# Goal: load the files from the paths of the available languages
#
# Checkout System Path Ordering
# echo -e ${PATH//:/\\n}

# set -o errexit
set -o nounset
set -o pipefail

PATH_SAVED=${PATH}

load_file_path() {
  PATH_2_READ="$1"
  for path_file in $(ls ${PATH_2_READ}/0*); do
    # shellcheck source=/dev/null
    . "${path_file}"
  done
}

main(){
  PATH_2_READ="$1"
  local LPATH
  LPATH=""

  load_file_path "${PATH_2_READ}"
  
  PATH=.:${LPATH}:${PATH_SAVED}
}

main "$@"