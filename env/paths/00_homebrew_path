#!/usr/bin/env bash

# homebrew_path
# --
# (c) Iver!
# Iv√°n Jaimes <iver@iver.mx>
# --
# Goal: add homebrew locations to path

homebrew_2_path() {
  # homebrew
  [ -d /opt/homebrew/bin ] && LPATH=/opt/homebrew/bin:${LPATH}
  [ -d /usr/local/Homebrew/bin/ ] && LPATH=/usr/local/Homebrew/bin:${LPATH}
}

homebrew_2_path
